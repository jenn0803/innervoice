<?php
include '../db.php';

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
  $confession = trim($_POST['confession']);

  if (!empty($confession)) {
    $stmt = $conn->prepare("INSERT INTO confessions (message, created_at) VALUES (?, NOW())");
    $stmt->bind_param("s", $confession);
    $stmt->execute();
    $stmt->close();
  }
}
header("Location: ../view.php");
exit();
?>